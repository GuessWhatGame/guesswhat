{
  "name" : "FiLM (cell): -classif, +FiLM, +attention",

  "model": {

    "type" : "film",

    "inputs": {
      "crop": true,
      "image": true
    },

    "question": {
      "input_type": "dialogue_history",
      "word_embedding_dim": 200,
      "glove" : false,
      "cell": "gru",
      "rnn_state_size": 1048,
      "bidirectional" : true,
      "layer_norm" : true,
      "max_pool" : false
    },

    "category": {
      "n_categories": 90,
      "embedding_dim": 200
    },

    "spatial": {
      "no_mlp_units": 30
    },

    "classifier":
    {
      "inputs" :
      {
       "question": false,
       "category": false,
       "spatial": false
      },

      "no_mlp_units": 512
    },

    "film_input":
    {
      "category": true,
      "spatial": true,
      "mask": false,

      "reading_unit": {
        "reading_unit_type" : "att_rnn",
        "stop_img_gradient" : true,
        "attention_units" : 0,
        "shared_attention": true,
        "feedback_loop" : true,
        "fuse_mode" : "dot"
      }

    },


    "image": {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,

      "attention" : {
        "mode": "none"
      }

    },

    "crop": {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,
      "scale" : 1.1,

      "attention" : {
        "mode": "none"
      }

    },

    "film_block":
    {
      "stem" : {
        "spatial_location" : true,
        "mask" : true,
        "conv_out": 256,
        "conv_kernel": [3,3]
      },

      "resblock" : {
        "feature_size" : [128, 128, 128, 128],
        "spatial_location" : true,
        "mask" : true,
        "kernel1" : [1,1],
        "kernel2" : [3,3]
      },

      "head" : {
        "spatial_location" : true,
        "mask" : true,
        "conv_out": 1024,
        "conv_kernel": [1,1],
        "no_mlp_units": 1024,

        "attention" : {
          "mode": "glimpse",
          "no_attention_mlp" : 256,
          "no_glimpses" : 1
        }
      }
    }

  },

  "optimizer": {
    "no_epoch": 10,
    "learning_rate": 3e-4,
    "batch_size": 64,
    "clip_val": 10.0,
    "weight_decay": 5e-6,
    "weight_decay_add": ["film_stack"],
    "weight_decay_remove": ["feedback_loop", "FiLM_layer" ,"pooling"]
  },

  "dropout_keep_prob" : 0.5,
  "status": ["success"],

  "seed": -1
}